<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".templates.TemplateFragment"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginHorizontal="@dimen/horizontal_margin_between_boxes"
    android:layout_marginVertical="@dimen/vertical_margin_between_boxes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin_from_boxes_to_inside"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:id="@+id/name_of_template_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name der Vorlage"
            android:textSize="@dimen/headline_size"
            android:textStyle="bold"
            android:layout_weight="85"/>

        <ImageButton
            android:id="@+id/template_menu_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/menu_button_height"
            android:background="@drawable/ic_baseline_menu_24"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="15"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttonText">
        </ImageButton>
    </LinearLayout>

    <TableLayout
        android:id="@+id/template_exercises_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_margin_from_boxes_to_inside"
        android:layout_marginHorizontal="@dimen/horizontal_margin_from_boxes_to_inside">
    </TableLayout>

</LinearLayout>